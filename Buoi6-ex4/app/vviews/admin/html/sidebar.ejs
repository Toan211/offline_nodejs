<% 
	const linkPrefix = systemConfig.prefixBlog + `/auth/logout/`;
%>

<%  
    let arrMenu = [
        {name: 'Dashboard', icon: 'fa-tachometer-alt', link: `${systemConfig.prefixAdmin}/dashboard`},
        {name: 'Items', icon: 'fa-users', link: `${systemConfig.prefixAdmin}/items`},
        {name: 'Categories', icon: 'fa-users', link: `${systemConfig.prefixAdmin}/categories`},
        {name: 'Articles', icon: 'fa-minus', link: `${systemConfig.prefixAdmin}/articles`},
        {name: 'RSS', icon: 'fa-users', link: `${systemConfig.prefixAdmin}/rss`},
        {name: 'Groups', icon: 'fa-tachometer-alt', link: `${systemConfig.prefixAdmin}/groups`},
        {name: 'Users', icon: 'fa-tachometer-alt', link: `${systemConfig.prefixAdmin}/users`},
    ];

    let xhtmlMenu = '';
    arrMenu.forEach(menu => {
        xhtmlMenu += `<li class="nav-item">
                    <a href="${menu.link}" class="nav-link" data-active="${menu.name.toLowerCase()}">
                        <i class="nav-icon fas ${menu.icon}"></i>
                        <p>${menu.name}</p>
                    </a>
                </li>`;
    });   
%>
icon: 'fa-minus'
<aside class="main-sidebar sidebar-dark-info elevation-4">
    <!-- Brand Logo -->
    <a  href="index3.html" class="brand-link">
        <img src="adminlte/images/logo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">ZendVN</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="adminlte/images/default-user.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">Admin ZendVN</a>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <%- xhtmlMenu %>
            </ul>

            <ul class="dropdown-menu dropdown-user">
	
                <li>
                    <a href="<%= linkPrefix %>">
                        <i class="fa fa-sign-out fa-fw"></i> Logout</a>
                </li>
            </ul>

        </nav>
        <!-- /.sidebar-menu -->

    </div>
    <!-- /.sidebar -->
</aside>