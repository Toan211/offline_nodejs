<% 
    inputHelper = (name, value, type = 'text', params = {}) => {
        let id = '';
        if (params.hasOwnProperty('id') && params['id'] !== undefined)
        {
            id = `id= "${params.id}"`;
        }
        return `<input type="${type}" name="${name}" value="${value}" ${id} class="form-control form-control-sm">`;
    }
%>
				
