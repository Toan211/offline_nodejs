<% 
	const collection = "groups";
	const linkPrefix = systemConfig.prefixAdmin + `/${collection}/`;
%>

<% include ./../../elements/errors %>
<% include ./../../helpers/selectBox %>

<div class="card card-info card-outline">
	<form action="<%= linkPrefix %>save/" method="POST" class="mb-0" >
		<div class="card-body">
		
			<div class="form-group row">
				<label for="name" class="col-sm-2 col-form-label text-sm-right required">Name</label>
				<div class="col-xs-12 col-sm-8">
					<input type="text" name="name" value="<%= group.name %>" class="form-control form-control-sm">
				</div>
			</div>

			<div class="form-group row">
				<label for="ordering" class="col-sm-2 col-form-label text-sm-right required">Ordering</label>
				<div class="col-xs-12 col-sm-8">
					<input type="text" name="ordering" value="<%= group.ordering %>" class="form-control form-control-sm">
				</div>
			</div>

			<div class="form-group row">
				<label for="status" class="col-sm-2 col-form-label text-sm-right required">Status</label>
				<div class="col-xs-12 col-sm-8">
					<select id="form[status]" name="status" class="custom-select custom-select-sm">
						<option value="novalue">Choose Status</option>
						<option value="active" <%= (group.status == "active") ? 'selected="selected"' : '' %> >Active</option>
						<option value="inactive" <%= (group.status == "inactive") ? 'selected="selected"' : '' %> >Inactive</option>
					</select>
					 
				</div>
			</div>
			
			<div class="form-group row">
				<label for="group_acp" class="col-sm-2 col-form-label text-sm-right required">Group ACP</label>
				<div class="col-xs-12 col-sm-8">
					<label><input type="radio" name="group_acp" value="yes" <% if(group.group_acp == 'yes'){%> checked="checked"' <%}%>> Yes</label>
					<label><input type="radio" name="group_acp" value="no" <% if(group.group_acp == 'no'){%> checked="checked"' <%}%>> No</label>
				</div>
			</div>

			<div class="form-group row">
				<label for="content" class="col-sm-2 col-form-label text-sm-right">Content</label>
				<div class="col-xs-12 col-sm-8">
					<textarea class="form-control form-control-sm" name="content" rows="2" id="content_ck">
						<%= group.content %>
					</textarea>
				</div>
			</div>
		
		</div>
		<div class="card-footer">
			<div class="col-12 col-sm-8 offset-sm-2">
				<input class="form-control" name="id" value="<%= group.id %>" type="hidden" >
				<button type="submit" class="btn btn-sm btn-success mr-1"> Submit</button>
				<a href="<%= linkPrefix %>" class="btn btn-sm btn-danger mr-1"> Cancel</a>
			</div>
		</div>
	</form>
</div>